   "source": [
    "Invert the Gaia parallax to get error bars on distance. \n",
    "\n",
    "$\\varpi = 27.31 \\pm 0.12$ mas"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 1,
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "36.62+0.16-0.16\n"
     ]
    }
   ],
   "source": [
    "varpi = 27.31e-3 # as\n",
    "sd = 0.12e-3 # as\n",
    "\n",
    "l = 1/(varpi + sd)\n",
    "m = 1/varpi\n",
    "h = 1/(varpi - sd)\n",
    "\n",
    "print(\"{:.2f}+{:.2f}-{:.2f}\".format(m, h-m, m-l))"
   ]
  },
